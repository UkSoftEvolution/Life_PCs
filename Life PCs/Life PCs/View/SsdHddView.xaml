        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="3,0,0,0">
                <TextBlock
                    Text="Физическая память"
                    Foreground="{StaticResource Font.Static.Foreground}"
                    FontFamily="{StaticResource Fonts.BaseFont}"
                    FontSize="14"/>
            </Grid>

            <Grid Grid.Row="1">
                <ProgressBar
                    Background="{x:Null}"
                    BorderThickness="0"
                    Value="50"/>
            </Grid>
        </Grid>
